{
  "name": "mikktspace",
  "version": "1.0.0",
  "description": "MikkTSpace vertex tangent calculation, in Web Assembly",
  "author": "Don McCurdy <dm@donmccurdy.com>",
  "license": "MIT",
  "main": "dist/mikktspace_main.js",
  "module": "dist/mikktspace_module.js",
  "types": "mikktspace.d.ts",
  "sideEffects": false,
  "scripts": {
    "dist": "yarn dist:main && yarn dist:module && find dist -type f ! -name 'mikktspace*' -delete",
    "dist:module": "wasm-pack build --release --target bundler --out-dir dist --out-name mikktspace_module --no-typescript",
    "dist:main": "wasm-pack build --release --target nodejs --out-dir dist --out-name mikktspace_main --no-typescript",
    "dist:debug": "wasm-pack build --dev --target nodejs --out-dir dist --out-name mikktspace_main --no-typescript",
    "clean": "rm dist/*",
    "test": "tape test/test.js | tap-spec",
    "preversion": "yarn dist && yarn test",
    "postversion": "git push && git push --tags && npm publish"
  },
  "keywords": [
    "mikktspace",
    "tangents",
    "tangent-space",
    "three.js",
    "threejs",
    "webgl",
    "webgpu"
  ],
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist/",
    "mikktspace.d.ts"
  ],
  "devDependencies": {
    "@gltf-transform/core": "^0.9.0",
    "@gltf-transform/lib": "^0.9.0",
    "tap-spec": "^5.0.0",
    "tape": "^5.1.1"
  }
}
